<Window x:Class="FirestorePC.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Firestore Admin" Height="450" Width="900">
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Кнопки -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
            <Button Content="Обновить" Width="100" Margin="0,0,8,0"
                    Click="Refresh_Click"/>
            <Button Content="Проверить (Ping)" Width="130" Margin="0,0,8,0"
                    Click="PingAll_Click"/>
            <Button Content="Чат OFF для всех" Width="150"
                    Click="SetAllChatOffline_Click"/>
        </StackPanel>

        <!-- Список ПК -->
        <DataGrid x:Name="PcList"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  MouseDoubleClick="PcList_MouseDoubleClick">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Key" Binding="{Binding Key}" Width="*"/>
                <DataGridTextColumn Header="ON/OFF" Binding="{Binding OnlineText}" Width="70"/>
                <DataGridTextColumn Header="PC Name" Binding="{Binding PcName}" Width="120"/>
                <DataGridTextColumn Header="User" Binding="{Binding UserName}" Width="120"/>
                <DataGridTextColumn Header="IP (Internet)" Binding="{Binding InternetIp}" Width="120"/>
                <DataGridTextColumn Header="IP (Local)" Binding="{Binding LocalIp}" Width="120"/>
                <DataGridTextColumn Header="Country" Binding="{Binding Country}" Width="100"/>
                <DataGridTextColumn Header="City" Binding="{Binding City}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Статус -->
        <TextBlock x:Name="Status"
                   Grid.Row="2"
                   Margin="0,8,0,0"
                   Text="Готово"
                   FontWeight="Bold"/>
    </Grid>
</Window>
